{
  "name": "shaikhoology/shaikhoology",
  "description": "Shaikhoology Shari'ah Screener skeleton (PHP)",
  "type": "project",
  "require": {
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1.3",
    "symfony/http-foundation": "^7.0",
    "monolog/monolog": "^3.0",
    "guzzlehttp/guzzle": "^7.0",
    "ezyang/htmlpurifier": "^4.17",
    "firebase/php-jwt": "^6.10",
    "predis/predis": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "serve": "php -S 127.0.0.1:8081 -t public",
    "seed:sqlite": "php scripts/dev_seed_sqlite.php",
    "smoke": "php scripts/dev_smoketest.php",
    "build:zip": "php scripts/build_prod_zip.php"
  }
}
