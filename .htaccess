# Root-level rewrite to public/index.php
# This file sits in /domains/halal.shaikhoology.com/public_html/.htaccess

RewriteEngine On

# Serve existing files/dirs directly (incl. public assets via /public/* when referenced)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Protect sensitive files/folders from direct web access
RewriteRule ^(\.env|composer\.(json|lock)|phpunit\.xml|README\.md)$ - [F,L]
RewriteRule ^(core|config|database|scripts|storage|tests)/ - [F,L]

# Send everything else to the app front controller
RewriteRule ^ public/index.php [L]

# Light security headers
<IfModule mod_headers.c>
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
